{
  "name": "contact-form-cloud-function",
  "version": "1.0.0",
  "description": "Google Cloud Function for handling contact form submissions",
  "main": "index.js",
  "scripts": {
    "start": "functions-framework --target=sendContactEmail",
    "deploy": "gcloud functions deploy sendContactEmail --runtime nodejs18 --trigger-http --allow-unauthenticated"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.0.0",
    "nodemailer": "^6.9.0"
  },
  "engines": {
    "node": "18"
  }
}
